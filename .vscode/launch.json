	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Dev",
			"program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server",
			"args": [
				"--config",
				"launch.js",
				"--hot",
				"--host",
				"0.0.0.0",
				"--port",
				"8200"
			],			
			"env": {
				"NODE_ENV": "development",
				"DEBUG": "lemonitor-application:*"
			},
			"cwd": "${workspaceFolder}",
			"outputCapture": "std"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Prod",
			"env": {
				"NODE_ENV": "production",
				"DEBUG": "lemonitor:*,lemonitor-application:*,-lemonitor:dev"
			},
			"program": "${workspaceFolder}/launch.js",
			"cwd": "${workspaceFolder}",
			"outputCapture": "std"
		}
	]
}